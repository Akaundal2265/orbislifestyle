<div class="pdp-products__box">
    <div class="pdp-products__media">
      {% if product.featured_image != blank %}
          <div class="pdp-products__media-main">
           <a title= "{{ product.title }}" href="{{ product.url }}"><img data-src="{{ product.featured_image |  image_url :'master' }}" src="{{ product.featured_image | image_url: width: 200 }}"></a>
          </div>
         
          <div class="pdp-products__media-hover">
          <a title= "{{ product.title }}" href="{{ product.url }}"><img data-src="{{ product.images[1] |  image_url :'master' }}" src="{{ product.images[1] | image_url: width: 200 }}"></a>
         </div>
      {%- endif -%}
    </div>

    <div class="pdp-products__rev-star">
          <div class="pdp-products__stars-wrapper">

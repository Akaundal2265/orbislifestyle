<section class="pdp-compare pdp-compare--desk">
  <div class="pdp-wrapper pdp-wrapper__position">
    <div class="pdp-compare__content">
      <header class="pdp-compare__header">
        <h2 class="pdp-compare__title pdp-title">
          {{pdpComparisonTitle}}
        </h2>
      </header>
      <div class="pdp-compare__table">
        <div class="pdp-compare__table-wrapper">
          <div class="pdp-compare__col--first">
            {% for table in tables %}
            {% if table.type == 'row' %}
            {% assign rowTitle = table.settings.table_row_text %}
            <div class="pdp-compare__cell">
              <p>{{ rowTitle }}</p>
            </div>
            {% assign rowLength = rowLength | plus: 1 %}
            {% endif %}
            {% endfor %}
          </div>
          <div class="pdp-compare__col pdp-compare__col--primary">
            {%- if section.settings.logo != blank -%}
            <div class="pdp-compare__cell logo-compare-cell">
              <div class="logo">
                {% if logo %}
                {{ logo | image_url: width: auto | image_tag: class: 'pdp-image' }}
                {% endif %}
              </div>
              <p>{{ colPrimaryTitle }}</p>
            </div>
            {% endif %}

            {%- if rowLength > 0 -%}
            {%- if colPrimaryRowOne != blank -%}
            <div class="pdp-compare__cell"><span class='circle'>{{ colPrimaryRowOne }}</span></div>
            {% else %}
            <div class="pdp-compare__cell"><span class='circle'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- endif -%}
            {%- endif -%}

            {%- if rowLength > 1 -%}
            {%- if colPrimaryRowTwo != blank -%}
            <div class="pdp-compare__cell"><span class='circle'>{{ colPrimaryRowTwo }}</span></div>
            {% else %}
            <div class="pdp-compare__cell"><span class='circle'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- endif -%}
            {%- endif -%}

            {%- if rowLength > 2 -%}
            {%- if colPrimaryRowTree != blank -%}
            <div class="pdp-compare__cell"><span class='circle'>{{ colPrimaryRowTree }}</span></div>
            {% else %}
            <div class="pdp-compare__cell"><span class='circle'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- endif -%}
            {%- endif -%}

            {%- if rowLength > 3 -%}
            {%- if colPrimaryRowFour != blank -%}
            <div class="pdp-compare__cell"><span class='circle'>{{ colPrimaryRowFour }}</span></div>
            {% else %}
            <div class="pdp-compare__cell"><span class='circle'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- endif -%}
            {%- endif -%}

            {%- if rowLength > 4 -%}
            {%- if colPrimaryRowFive != blank -%}
            <div class="pdp-compare__cell"><span class='circle'>{{ colPrimaryRowFive }}</span></div>
            {% else %}
            <div class="pdp-compare__cell"><span class='circle'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- endif -%}
            {%- endif -%}

            {%- if rowLength > 5 -%}
            {%- if colPrimaryRowSix != blank -%}
            <div class="pdp-compare__cell"><span class='circle'>{{ colPrimaryRowSix }}</span></div>
            {% else %}
            <div class="pdp-compare__cell"><span class='circle'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- endif -%}
            {%- endif -%}
            {%- if rowLength > 6 -%}
            {%- if colPrimaryRowSeven != blank -%}
            <div class="pdp-compare__cell"><span class='circle'>{{ colPrimaryRowSeven }}</span></div>
            {% else %}
            <div class="pdp-compare__cell"><span class='circle'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- endif -%}
            {%- endif -%}
            {%- if rowLength > 7 -%}
            {%- if colPrimaryRowEight != blank -%}
            <div class="pdp-compare__cell"><span class='circle'>{{ colPrimaryRowEight }}</span></div>
            {% else %}
            <div class="pdp-compare__cell"><span class='circle'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- endif -%}
            {%- endif -%}

          </div>
          {% for table in tables %}
          {% if table.type == 'col' %}
          {%liquid
          assign colTitle = table.settings.table_col_text
          assign rowOneText = table.settings.table_col_row_one_text
          assign rowTwoText = table.settings.table_col_row_two_text
          assign rowTreeText = table.settings.table_col_row_tree_text
          assign rowFourText = table.settings.table_col_row_four_text
          assign rowFiveText = table.settings.table_col_row_five_text
          assign rowSixText = table.settings.table_col_row_six_text
          assign rowSevenText = table.settings.table_col_row_seven_text
          assign rowEightText = table.settings.table_col_row_eight_text
          assign rowNineText = table.settings.table_col_row_nine_text
          assign rowTenText = table.settings.table_col_row_ten_text

          %}


          <div class="pdp-compare__col">
            <div class="pdp-compare__cell">
              <p>{{ colTitle }}</p>
            </div>
            {%- if rowLength > 0 -%}
            {%- if rowOneText != blank -%}
            <div class="pdp-compare__cell"> {{ rowOneText }}</div>
            {%- elsif table.settings.table_col_row_one -%}
            <div class="pdp-compare__cell"><span class='circle black'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- else -%}
            <div class="pdp-compare__cell">{% render 'snippet-icon-x-bold' %}</div>
            {%- endif -%}
            {%- endif -%}

            {%- if rowLength > 1 -%}
            {%- if rowTwoText != blank -%}

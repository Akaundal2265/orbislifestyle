            {%- else -%}
            <div class="pdp-compare__cell">{% render 'snippet-icon-x-bold' %}</div>
            {%- endif -%}
            {%- endif -%}

            {%- if rowLength > 2 -%}
            {%- if rowTreeText != blank -%}
            <div class="pdp-compare__cell"> {{ rowTreeText }}</div>
            {%- elsif table.settings.table_col_row_tree -%}
            <div class="pdp-compare__cell"><span class='circle black'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- else -%}
            <div class="pdp-compare__cell">{% render 'snippet-icon-x-bold' %}</div>
            {%- endif -%}
            {%- endif -%}

            {%- if rowLength > 3 -%}
            {%- if rowFourText != blank -%}
            <div class="pdp-compare__cell"> {{ rowFourText }}</div>
            {%- elsif table.settings.table_col_row_four -%}
            <div class="pdp-compare__cell"><span class='circle black'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- else -%}
            <div class="pdp-compare__cell">{% render 'snippet-icon-x-bold' %}</div>
            {%- endif -%}
            {%- endif -%}

            {%- if rowLength > 4 -%}
            {%- if rowFiveText != blank -%}
            <div class="pdp-compare__cell"> {{ rowFiveText }}</div>
            {%- elsif table.settings.table_col_row_five-%}
            <div class="pdp-compare__cell"><span class='circle black'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- else -%}
            <div class="pdp-compare__cell">{% render 'snippet-icon-x-bold' %}</div>
            {%- endif -%}
            {%- endif -%}

            {%- if rowLength > 5 -%}
            {%- if rowSixText != blank -%}
            <div class="pdp-compare__cell"> {{ rowSixText }}</div>
            {%- elsif table.settings.table_col_row_six-%}
            <div class="pdp-compare__cell"><span class='circle black'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- else -%}
            <div class="pdp-compare__cell">{% render 'snippet-icon-x-bold' %}</div>
            {%- endif -%}
            {%- endif -%}
            {%- if rowLength > 6 -%}
            {%- if rowSevenText != blank -%}
            <div class="pdp-compare__cell"> {{ rowSevenText }}</div>
            {%- elsif table.settings.table_col_row_seven-%}
            <div class="pdp-compare__cell"><span class='circle black'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- else -%}
            <div class="pdp-compare__cell">{% render 'snippet-icon-x-bold' %}</div>
            {%- endif -%}
            {%- endif -%}
            {%- if rowLength > 7 -%}
            {%- if rowEightText != blank -%}
            <div class="pdp-compare__cell"> {{ rowEightText }}</div>
            {%- elsif table.settings.table_col_row_eight-%}
            <div class="pdp-compare__cell"><span class='circle black'>{% render 'snippet-icon-tick-only' %}</span></div>
            {%- else -%}
            <div class="pdp-compare__cell">{% render 'snippet-icon-x-bold' %}</div>
            {%- endif -%}
            {%- endif -%}

          </div>
          {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
